{
  "name": "employee-recruitment-management",
  "version": "1.0.0",
  "description": "Employee & Recruitment Management System - Monorepo with Angular Frontend and Node.js Backend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "install:all": "npm install && cd packages/backend && npm install && cd ../frontend && npm install",
    "start": "npm run start:backend",
    "start:backend": "cd packages/backend && npm run start",
    "start:frontend": "cd packages/frontend && npm run start"
  },
  "keywords": [
    "employee-management",
    "recruitment",
    "angular",
    "nodejs",
    "sqlite",
    "monorepo"
  ],
  "author": "HR Management Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}